{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/",
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "module": "ES2015",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "outDir": "./dist/",
        "paths": {
            "@/*": ["./src/*"],
        },
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
    },
    "exclude": ["node_modules", "**/*.test.*"],
    "files": ["./src/index.ts"],
    "include": ["src"]
}
