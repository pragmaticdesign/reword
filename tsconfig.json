{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "./dist/",
        "paths": {
            "@/*": ["./src/*"],
        },
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.*"]
}
